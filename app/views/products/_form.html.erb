<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field col-md-10">
    <%= f.label :title, class: "control-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :author, class: "control-label" %>
    <%= f.text_field :author, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :product_images, class: "control-label" %>
    <%= f.file_field :product_images, class: "form-control-file", multiple: true %>
  </div>

  <div class="field col-md-10">
    <%= f.label :sale_or_rent, class: "control-label col-md-2" %>
    <%= f.select :sale_or_rent, Product.sale_or_rents.keys.to_a.map {|e| [e.humanize, e]}, include_blank: true, class: "selectpicker", id: "sale_or_rent" %>
  </div>

  <div class="rent-info">
    <div class="field col-md-10">
      <%= f.label :max_rent_duration, "Max rent duration (Months)", class: "control-label col-md-2" %>
      <%= f.select :duration, (1..6), class: "selectpicker", include_blank: true %>
    </div>
  </div>

  <div class="field col-md-10">
    <%= f.label :price, class: "control-label" %>
     <span class="text-muted">or monthly fee for rent
    <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :discount, "Discount (%)", class: "control-label" %>
    <%= f.number_field :discount, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :category, class: "control-label col-md-2" %>
    <%= f.select :category, Product.categories.keys.to_a.map {|e| [e.humanize, e] }, include_blank: true, class: "selectpicker" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :description, class: "control-label" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :ages, class: "control-label" %>
    <%= f.text_field :ages, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :format, class: "control-label col-md-2" %>
    <%= f.select :format, Product.formats.keys.to_a.map {|e| [e.humanize, e]}, include_blank: true, class: "selectpicker" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :pages, class: "control-label" %>
    <%= f.number_field :pages, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :publication_date, class: "control-label" %>
    <%= f.text_field :publication_date, class: "datepicker form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :publisher, class: "control-label" %>
    <%= f.text_field :publisher, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :publication_city, class: "control-label" %>
    <%= f.text_field :publication_city, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :language, class: "control-label col-md-2" %>
    <%= f.select :language, Product.languages.keys.to_a.map {|e| [e.humanize, e]}, include_blank: true, class: "selectpicker" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :isbn, "ISBN", class: "control-label" %>
    <%= f.text_field :isbn, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label "Number of units in stock", class: "control-label" %>
    <%= f.number_field :stock, class: "form-control" %>
  </div>

  <div class="actions col-md-10">
    <%= f.submit "Save and Submit", class: "btn btn-success" %>
    <%= link_to('Permanently Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger") if Product.exists?(@product) %>

  </div>
<% end %>

