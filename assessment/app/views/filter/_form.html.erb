<div class="search-form">
    <h4>Filter/Search</h4>
    <div class="col-md-12">
            <%= form_for :search, url: products_path, method: "GET" do |f| %>
        <div class="field col-md-3">
            <%= f.label "Search", class: "control-label" %>
            <%= f.text_field(:search_string, placeholder: "Search", class: "form-control") %>
        </div>
        <div class="field col-md-3">
            <%= f.label "Search by ISBN", class: "control-label" %>
            <%= f.text_field(:search_isbn, placeholder: "Search ISBN", class: "form-control") %>
        </div>
        <div class="field col-md-3">
            <%= f.label :category, class: "control-label" %>
            <%= f.select :category, Product.categories.keys.to_a.map {|e| [e.humanize, e] }, include_blank: true %>
        </div>
        <div class="field col-md-3">
            <%= f.label :format, class: "control-label" %>
            <%= f.select :format, Product.formats.keys.to_a.map {|e| [e.humanize, e]}, include_blank: true %>
        </div>
        <div class="field col-md-3">
            <%= f.label :language, class: "control-label" %>
            <%= f.select :language, Product.languages.keys.to_a.map {|e| [e.humanize, e]}, include_blank: true %>
        </div>
        <div class="field col-md-3">
            <%= f.label :price_above, "Priced between RM", class: "control-label" %>
            <%= f.number_field :price_above, class: "form-control" %>
            <%= f.label :price_below, " to RM", class: "control-label" %>
            <%= f.number_field :price_below, class: "form-control" %>
        </div>
        <div class="field col-md-3">
            <%= f.label :sale_or_rent, class: "control-label" %>
            <%= f.select :sale_or_rent, Product.sale_or_rents.keys.to_a.map {|e| [e.humanize, e]}, include_blank: true %>
        </div>
        <%= f.submit "Search" %>
    </div>
    <% end %>
</div>
