<div class="container">  
  <%= form_for(order, class: "form-inline") do |f| %>
    <% if order.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

        <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.hidden_field :product_id, value: @product.id %>

    <div class="field col-md-3">
      <%= f.label :quantity, class: "control-label" %>
      <%= f.number_field :quantity, class: "form-control", id: "quantity" %>
    </div>

    <div class="field col-md-3">
      <%= f.label "Total Price", class: "control-label" %>
      <%= f.text_field :price, readonly: true, class: "form-control",  id: "total" %>
    </div>

<script>
$("#quantity").on("input", function() {
  var quant = parseInt($(this).val());
  var total = quant * <%= @product.price %>;
  $(this).val(total);
})

 
</script>

    <div class="actions col-md-3">
      <%= f.submit %>
    </div>
  <% end %>
</div>
