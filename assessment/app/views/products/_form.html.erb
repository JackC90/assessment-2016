<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field col-md-10">
    <%= f.label :title, class: "control-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :product_images, class: "control-label" %>
    <%= f.file_field :product_images, class: "form-control-file", multiple: true %>
  </div>

  <div class="field col-md-10">
    <%= f.label :price, class: "control-label" %>
    <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :discount, "Discount (%)", class: "control-label" %>
    <%= f.number_field :discount, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :category, class: "control-label" %>
    <%= f.select :category, Product.categories.keys.to_a.map {|e| [e.humanize, e] }, include_blank: true, class: "selectpicker" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :sale_or_rent, class: "control-label" %>
    <%= f.select :sale_or_rent, Product.sale_or_rents.keys.to_a.map {|e| [e.humanize, e]}, include_blank: true, class: "selectpicker" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :description, class: "control-label" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :ages, class: "control-label" %>
    <%= f.text_field :ages, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :format, class: "control-label" %>
    <%= f.select :format, Product.formats.keys.to_a.map {|e| [e.humanize, e]}, include_blank: true, class: "selectpicker" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :pages, class: "control-label" %>
    <%= f.number_field :pages, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :publication_date, class: "control-label" %>
    <%= f.text_field :publication_date, class: "datepicker form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :publisher, class: "control-label" %>
    <%= f.text_field :publisher, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :publication_city, class: "control-label" %>
    <%= f.text_field :publication_city, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label :language, class: "control-label" %>
    <%= f.select :language, Product.languages.keys.to_a.map {|e| [e.humanize, e]}, include_blank: true, class: "selectpicker" %>
  </div>

  <div class="field col-md-10">
    <%= f.label "ISBN", class: "control-label" %>
    <%= f.text_field :isbn, class: "form-control" %>
  </div>

  <div class="field col-md-10">
    <%= f.label "Number of units in stock", class: "control-label" %>
    <%= f.number_field :stock, class: "form-control" %>
  </div>

  <div class="actions col-md-10">
    <%= f.submit "Save and Submit" %>
  </div>
<% end %>

<script>
$(".datepicker").datepicker({
            changeMonth: true,
            changeYear: true,
            showButtonPanel: true,
            yearRange: "-400:+0",
        });
</script>
